<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.it.onefool.nsfw18.mapper.LoginMapper">

    <select id="findUserByUsername" resultType="com.it.onefool.nsfw18.domain.entry.User">
        select
            id,username,nickname,email,
            mobile,sex,avatar,password,
            status,create_time,update_time,remark,deleted
        from user
        where username = #{username} and deleted = 0
    </select>

    <insert id="register" parameterType="com.it.onefool.nsfw18.domain.entry.User">
        insert into `user`(`username`, `nickname`, `password`, `email`, `sex`,
                           `create_time`, `update_time`, `status`, `deleted`)
        values (#{username}, #{nickname}, #{password}, #{email}, #{sex},
                #{createTime}, #{updateTime}, #{status}, #{deleted})
    </insert>
</mapper>